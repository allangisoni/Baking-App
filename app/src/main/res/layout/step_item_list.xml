<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/step_item_elevation"
    android:layout_margin="@dimen/step_item_margin"
    android:paddingLeft="@dimen/recipe_paddingTop"
    android:paddingRight="@dimen/recipe_paddingTop">



    <TextView
        android:id="@+id/tvStepDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:padding="@dimen/recipe_paddingTop"
        android:textStyle="italic"
        android:textSize="@dimen/title_size"
        />

</android.support.v7.widget.CardView>