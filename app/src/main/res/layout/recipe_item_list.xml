<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivRecipe"
        android:layout_width="@dimen/recipe_item_width"
        android:layout_height="@dimen/recipe_item_height"
        android:contentDescription="@string/RecipeImage"
        android:scaleType="centerCrop"
        android:src="@drawable/myrecipe"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivRecipe"
        android:orientation="vertical"
        android:padding="@dimen/recipe_paddingTop"
        android:layout_centerVertical="true">

    <TextView
        android:id="@+id/tvRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RecipeName"
        android:textSize="@dimen/recipe_item_font_size"/>

    </LinearLayout>

</RelativeLayout>