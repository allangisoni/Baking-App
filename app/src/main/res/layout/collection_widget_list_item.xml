<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal"
android:layout_width="match_parent"
android:paddingLeft="@dimen/recipe_paddingLeft"
android:paddingRight="@dimen/recipe_paddingLeft"
android:paddingStart="@dimen/recipe_paddingLeft"
android:paddingEnd="@dimen/recipe_paddingLeft"
android:minHeight="@dimen/widget_listview_item_height"
android:weightSum="2"
android:id="@+id/widgetItemContainer"
android:layout_height="wrap_content">

<TextView android:id="@+id/widgetRecipeIngredientLabel"
    android:layout_width="wrap_content"
    android:gravity="start"
    android:layout_weight="1"
    android:textColor="@color/text"
    android:layout_gravity="center_vertical"
    android:layout_height="wrap_content"></TextView>

</LinearLayout>